# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Replicate API Configuration (for GPT-4o Transcribe)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# OpenAI API Configuration (for direct GPT-4o transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram API Configuration (for Nova-3 transcription)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/voicio_db

# Puppeteer Configuration (for diagram generation)
PUPPETEER_CONFIG_PATH=./puppeteerConfigFile.json
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Optional: Timezone Configuration
TZ=Europe/Moscow

# Optional: Logging Level
LOG_LEVEL=INFO

# Optional: Admin User ID (for admin-only features)
ADMIN_USER_ID=your_telegram_user_id